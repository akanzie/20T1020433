@model _20T1020433.DomainModels.Customer
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h1 class="mb-3">Hồ sơ của tôi</h1>
<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                <h5 class="my-3">@Model.CustomerName</h5>                
                <p class="text-muted mb-4">@Model.Address, @Model.City, @Model.Country</p>                
            </div>
        </div>        
    </div>
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Tên:</p>
                    </div>
                    <div class="col-sm-9">
                        <input type="text" name="CustomerName" value="@Model.CustomerName" class="text-muted mb-0">
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Tên giao dịch:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.ContactName</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Mã bưu chính:</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.PostalCode</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Địa chỉ</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Address, @Model.City, @Model.Country</p>
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>