
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";    
}

<h1 class="mb-3">Đổi mật khẩu</h1>
<div class="row" style="padding-top:10px">
    <div class="col-lg-10">
        <div class="mb-4">
            <form action="~/User/ChangePassword" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-sm-4">
                        <p class="mb-0">Mật khẩu hiện tại:</p>
                    </div>
                    <div class="col-sm-6">
                        <input type="password" id="oldPassword" name="oldPassword" class="form-control-static">
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-4">
                        <p class="mb-0">Mật khẩu mới</p>
                    </div>
                    <div class="col-sm-6">
                        <input type="password" id="password1" name="newPassword" class="form-control-static">
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-4">
                        <p class="mb-0">Xác nhận mật khẩu:</p>
                    </div>
                    <div class="col-sm-6">
                        <input type="password" id="password2" name="newPass" class="form-control-static">
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xs-8">
                        @Html.ValidationMessage("", "", new { @style = "color:#f00" })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="col-xs-5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đổi mật khẩu</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
