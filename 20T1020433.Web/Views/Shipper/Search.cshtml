@model _20T1020433.Web.Models.ShipperSearchOutput
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong>@Model.PageCount </strong>trang</p>

<table class="table table-bordered table-hover">
    <thead>
    <tr class="bg-primary">
        <th>Tên người giao hàng</th>
        <th>Số điện thoại</th>
        <th class="col-sm-2">

        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Data)
    {
        <tr>
            <td>@item.ShipperName</td>
            <td>@item.Phone</td>
            <td>
                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-success">Sửa</a>
                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="col-sm-7 text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="paginate_button active">
                    <a href="#" >@i</a>
                </li>
            }
            else
            {
                <li class="paginate_button">
                    <a href="javascript:;" onclick="doSearch(@i)">@i</a>
                </li>
            }
                        
        }
    </ul>
</div>