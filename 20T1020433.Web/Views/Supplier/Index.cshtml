@model IEnumerable<_20T1020433.DomainModels.Supplier>
@{
    ViewBag.Title = "Quản lí nhà cung cấp";
}
<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group input-group-sm">
                <input autofocus class="form-control" name="searchValue" placeholder="Search" type="text" value="@ViewBag.SearchValue">
                <span class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                        <strong> Tìm kiếm</strong>
                    </button>
                    <a href="~/Supplier/Create" class="btn bg-olive "> 
                        <i class="glyphicon glyphicon-plus-sign"></i>
                        <strong> Bổ sung</strong>
                    </a>
                </span>
               
            </div>
        </form>

        <p>Có <strong>@ViewBag.RowCount</strong> nhà cung cấp trong tổng số <strong>@ViewBag.PageCount </strong>trang</p>

        <table class="table table-bordered table-hover">
            <thead>
                <tr class="bg-primary">
                    <th>Tên nhà cung cấp</th>
                    <th>Tên giao dịch</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Mã bưu chính</th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                    <tr>
                        <td>@item.SupplierName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>
                        <td class = text-right style ="width: 120px">
                            <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-success">Sửa</a>
                            <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-danger">Xóa</a>
                        </td>
                </tr>
                }
            </tbody>
        </table>
        <div class="col-sm-7 text-center">
            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (i == ViewBag.Page)
                        {
                            <li class="paginate_button active">
                                <a href="#" >@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="paginate_button">
                                <a href="~/Supplier?page=@i&searchValue=@ViewBag.SearchValue">@i</a>
                            </li>
                        }
                        
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

