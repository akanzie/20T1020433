@model _20T1020433.Web.Models.CategorySearchOutput
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount </strong>trang</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="bg-primary">
            <th>Tên loại hàng</th>
            <th>Mô tả</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-success">Sửa</a>
                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-sm-7 text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="paginate_button active">
                    <a href="#">@i</a>
                </li>
            }
            else
            {
                <li class="paginate_button">
                    <a href="javascript:;" onclick="doSearch(@i)">@i</a>
                </li>
            }

        }
    </ul>
</div>

