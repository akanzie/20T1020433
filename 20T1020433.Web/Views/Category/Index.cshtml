
@{
    ViewBag.Title = "Quản lí loại hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">
                        <i class="glyphicon glyphicon-search"></i> <strong> Tìm kiếm</strong>
                    </button>
                    <a href="~/Category/Create" class="btn bg-olive ">
                        <i class="glyphicon glyphicon-plus-sign"></i><strong> Bổ sung</strong>
                    </a>
                </span>

            </div>
        </form>
        <p>Có <strong>100</strong> loại hàng trong tổng số <strong>10 </strong>trang</p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="bg-aqua">
                    <th>Tên loại hàng</th>
                    <th>Mô tả</th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 5; i++)
                {
                    <tr>
                        <td>Thức ăn</td>
                        <td>Các loại món ăn</td>                     >
                        <td>
                            <a href="~/Category/Edit" class="btn btn-success">Sửa</a>
                            <a href="~/Category/Delete" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-aqua">
            <ul class="pagination">
                <li class="paginate_button active">
                    <a href="#">1</a>
                </li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>



