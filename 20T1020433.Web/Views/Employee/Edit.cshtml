@model _20T1020433.DomainModels.Employee
@{
    
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post">
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="LastName"
                           name="LastName"
                           value="@Model.LastName"
                           placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="FirstName"
                           name="FirstName"
                           value="@Model.FirstName"
                           placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <div class="input-group date">
                        <input type="text"
                               class="form-control pull-right"
                               id="BirthDay"
                               name="BirthDay"
                               value="@Model.BirthDate.ToString("dd/MM/yyyy")">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="preview">
                    <label for="Photo-Uploader" style="cursor: pointer" title="Click để thay đổi ảnh">
                        <img id="Photo" src="@Model.Photo" class="img-thumbnail" style="width: 125px; height: 140px;" alt="">
                    </label>
                    <input accept="image/*" type="file" class="hidden"
                           id="Photo-Uploader"
                           name="Photo"
                           placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class=" ">
                    <textarea class="form-control" rows="3" style="width: 80.5%; margin-left: 199px;"
                              id="Notes"
                              name="Notes"
                              placeholder="">@Model.Notes</textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Email"
                           name="Email"
                           value="@Model.Email"
                           placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu:</label>
                <div class="col-sm-10">
                    <input type="hidden"
                           class="form-control"
                           id="Password"
                           name="Password"
                           value="@Model.Password"
                           placeholder="">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">
                        <i class="glyphicon glyphicon-floppy-saved"></i> Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div></div>


