
@{
    ViewBag.Title = "Quản lí khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group input-group-sm">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info btn-flat">
                        <i class="glyphicon glyphicon-search"></i> <strong> Tìm kiếm</strong>
                    </button>
                    <a href="~/Customer/Create" class="btn bg-olive ">
                        <i class="glyphicon glyphicon-plus-sign"></i><strong> Bổ sung</strong>
                    </a>
                </span>

            </div>
        </form>

        <p>Có <strong>100</strong> khách hàng trong tổng số <strong>10 </strong>trang</p>

        <table class="table table-bordered table-hover">
            <thead>
                <tr class="bg-aqua">
                    <th>Tên khách hàng</th>
                    <th>Tên giao dịch</th>
                    <th>Địa chỉ</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Mã bưu chính</th>
                    <th>Email</th>
                    <th>Mật khẩu</th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 5; i++)
                {
                <tr>
                    <td>John</td>
                    <td>Mua sắm</td>
                    <td>10 Lê Lợi</td>
                    <td>Việt Nam</td>
                    <td>Huế</td>
                    <td>1234</td>
                    <td>anhkiet@gmail.com</td>
                    <td>1123</td>
                    <td>
                        <a href="~/Customer/Edit" class="btn btn-success">Sửa</a>
                        <a href="~/Customer/Delete" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <div class="text-aqua">
            <ul class="pagination">
                <li class="paginate_button">
                    <a href="#">1</a>
                </li>
                <li class="paginate_button active"><a href="#">2</a></li>
                <li class="paginate_button"><a href="#">3</a></li>
                <li class="paginate_button"><a href="#">4</a></li>
                <li class="paginate_button"><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>



