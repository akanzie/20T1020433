@using _20T1020433.DomainModels
@using _20T1020433.BusinessLayers
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="treeview">
                <a href="~/">
                    <i class="fa fa-home"></i> <span>Trang Chủ</span>

                </a>
            </li>

            <li class="treeview active">
                <a href="#">
                    <i class="fa fa-folder"></i> <span>Quản lí dữ liệu</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    @{
                        List<Role> ds = Session["EmployeeRoles"] as List<Role>;
                        foreach (var item in ds)
                        {
                            if (item.RoleID == EmployeeRoles.MANAGE_CATEGORY)
                            {
                                <li><a href="~/Admin/Category"><i class="fa fa-circle-o"></i> Loại hàng</a></li>

                            }
                            if (item.RoleID == EmployeeRoles.MANAGE_EMPLOYEE)
                            {
                                <li><a href="~/Admin/Employee"><i class="fa fa-circle-o"></i> Nhân viên</a></li>
                            }
                            if (item.RoleID == EmployeeRoles.MANAGE_CUSTOMER)
                            {
                                <li><a href="~/Admin/Customer"><i class="fa fa-circle-o"></i> Khách hàng</a></li>

                            }
                            if (item.RoleID == EmployeeRoles.MANAGE_PRODUCT)
                            {
                                <li><a href="~/Admin/Product"><i class="fa fa-circle-o"></i> Mặt hàng</a></li>

                            }
                            if (item.RoleID == EmployeeRoles.MANAGE_SUPPLIER)
                            {
                                <li><a href="~/Admin/Supplier"><i class="fa fa-circle-o"></i> Nhà cung cấp</a></li>

                            }
                            if (item.RoleID == EmployeeRoles.MANAGE_SHIPPER)
                            {
                                <li><a href="~/Admin/Shipper"><i class="fa fa-circle-o"></i> Người giao hàng</a></li>

                            }
                        }
                    }
                </ul>
            </li>

            <li class="treeview active">
                <a href="#">
                    <i class="fa fa-folder"></i> <span>Quản lí đơn hàng</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    @{ foreach (var item in ds)
                        {
                            if (item.RoleID == EmployeeRoles.CREATE_ORDER)
                            {
                                <li><a href="~/Admin/Order/Create"><i class="fa fa-circle-o"></i> Lập hóa đơn</a></li>
                            }
                            if (item.RoleID == EmployeeRoles.MANAGE_ORDER)
                            {
                                <li><a href="~/Admin/Order"><i class="fa fa-circle-o"></i> Xử lí đơn hàng</a></li>
                            }
                        }
                    }


            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
